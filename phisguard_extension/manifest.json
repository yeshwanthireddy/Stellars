{
  "manifest_version": 3,
  "name": "PhishGuard",
  "version": "1.0",

  "permissions": ["activeTab"],

  "host_permissions": [
    "<all_urls>",
    "http://127.0.0.1/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
